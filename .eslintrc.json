{
  "parser": "@typescript-eslint/parser",
  "plugins": [
	"@typescript-eslint"
  ],
  "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended"],
  "parserOptions": {
	"ecmaVersion": 13,
	"sourceType": "module"
  },
  "env": {
	"node": true,
	"es2022": true
  },
  "rules": {
	"indent": [
	  "error",
	  "tab"
	],
	"linebreak-style": [
	  "error",
	  "unix"
	],
	"quotes": [
	  "error",
	  "double",
	  {
		"allowTemplateLiterals": true
	  }
	],
	"semi": [
	  "error",
	  "always"
	]
  }
}